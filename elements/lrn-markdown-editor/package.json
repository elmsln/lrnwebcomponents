{
  "name": "@lrnwebcomponents/lrn-markdown-editor",
  "wcfactory": {
    "className": "LrnMarkdownEditor",
    "customElementClass": "LitElement",
    "elementName": "lrn-markdown-editor",
    "generator-wcfactory-version": "0.3.1",
    "useHAX": true,
    "useSass": false,
    "files": {
      "css": "src/lrn-markdown-editor.css",
      "scss": "src/lrn-markdown-editor.scss",
      "html": "src/lrn-markdown-editor.html",
      "js": "src/lrn-markdown-editor.js",
      "properties": "src/lrn-markdown-editor-properties.json",
      "hax": "src/lrn-markdown-editor-hax.json"
    },
    "sharedStyles": []
  },
  "version": "8.0.2",
  "description": "markdown editor wrapper with preview editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "type": "module",
  "main": "lrn-markdown-editor.js",
  "module": "lrn-markdown-editor.js",
  "scripts": {
    "start": "yarn run dev",
    "build": "gulp --gulpfile=gulpfile.cjs && prettier --ignore-path ../../.prettierignore --write \"**/*.{js,json}\" && wca analyze \"{*,lib/**}.js\" --format vscode --outFile custom-elements.json",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "gulp dev --gulpfile=gulpfile.cjs",
    "serve": "web-dev-server -c ../../web-dev-server.config.mjs",
    "lighthouse": "gulp lighthouse --gulpfile=gulpfile.cjs",
    "test:watch": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium --watch",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium"
  },
  "author": {
    "name": "haxtheweb",
    "url": "https://hax.psu.edu/"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@lrnwebcomponents/a11y-tabs": "^8.0.2",
    "@lrnwebcomponents/hax-iconset": "^8.0.2",
    "@lrnwebcomponents/mtz-marked-editor": "^8.0.2",
    "@lrnwebcomponents/simple-icon": "^8.0.2",
    "@polymer/marked-element": "^3.0.0",
    "@polymer/paper-input": "^3.0.2",
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "^8.0.2",
    "@lrnwebcomponents/storybook-utilities": "^8.0.2",
    "@open-wc/testing": "4.0.0",
    "@polymer/iron-component-page": "github:PolymerElements/iron-component-page",
    "@polymer/iron-demo-helpers": "3.1.0",
    "@web/dev-server": "0.4.5",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "concurrently": "8.2.2",
    "wct-browser-legacy": "1.0.2"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html"
  ],
  "gitHead": "6e322873c1da195972880b7c146cbadb1e7e84c7"
}
