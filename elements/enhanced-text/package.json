    "useHAX": false,
    "useSass": false,
    "files": {
      "css": "src/enhanced-text.css",
      "scss": "src/enhanced-text.scss",
      "html": "src/enhanced-text.html",
      "js": "src/enhanced-text.js",
      "properties": "src/enhanced-text-properties.json",
