  "lint-staged": {
    "*.{js,json}": "prettier --write",
    "*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged",
    "*.css": "stylelint --fix",
    "*.scss": "stylelint --syntax=scss --fix"
  },
  "keywords": [
    "yeoman-generator",
    "custom-elements",
    "web-components",
    "webcomponents",
    "polymer",
    "lit-element",
    "skate-js",
    "slim-js",
    "twig",
    "lit-html",
    "vanillajs"
  ],
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "elements/*"
    ],
    "nohoist": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-suite-inject > /dev/null && lint-staged"
    }
  }
}
